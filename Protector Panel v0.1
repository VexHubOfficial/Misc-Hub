		end
	end)
	btn.MouseLeave:Connect(function()
		if not btn or not btn:IsDescendantOf(game) then return end
		if btn:IsA("TextButton") then
			tween({BackgroundColor3 = Color3.fromRGB(0,0,0)}, btn, 0.12):Play()
		end
	end)
end

